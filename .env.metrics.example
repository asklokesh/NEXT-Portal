# Real Metrics Collection Configuration
# Copy this file to .env.local and configure the values

# Auto-start metrics collection on app startup
AUTO_START_METRICS=true
METRICS_REFRESH_INTERVAL=30

# Prometheus Configuration
PROMETHEUS_URL=http://localhost:9090
PROMETHEUS_USERNAME=
PROMETHEUS_PASSWORD=

# Kubernetes Configuration
KUBERNETES_ENABLED=false
KUBERNETES_IN_CLUSTER=false
KUBERNETES_NAMESPACE=backstage

# Backstage Metrics
ENABLE_BACKSTAGE_METRICS=true
ENABLE_SYSTEM_METRICS=true

# Cloud Provider Metrics (AWS)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Cloud Provider Metrics (GCP)
GOOGLE_CLOUD_PROJECT=
GOOGLE_CLOUD_REGION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=

# Cloud Provider Metrics (Azure)
AZURE_SUBSCRIPTION_ID=
AZURE_RESOURCE_GROUP=
AZURE_REGION=eastus

# APM Integration (DataDog)
DATADOG_API_KEY=
DATADOG_APP_NAME=backstage

# APM Integration (New Relic)
NEW_RELIC_LICENSE_KEY=
NEW_RELIC_APP_NAME=backstage

# APM Integration (Elastic APM)
ELASTIC_APM_SERVER_URL=
ELASTIC_APM_SECRET_TOKEN=
ELASTIC_APM_SERVICE_NAME=backstage

# Alerting Configuration
ENABLE_METRIC_ALERTS=true
MEMORY_THRESHOLD_MB=1024
ERROR_RATE_THRESHOLD=10
RESPONSE_TIME_THRESHOLD_MS=5000

# Export Configuration
METRICS_EXPORT_INTERVAL=60
ENABLE_PROMETHEUS_EXPORT=true