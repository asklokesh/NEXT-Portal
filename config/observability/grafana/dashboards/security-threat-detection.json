        },
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "center",
          "orientation": "horizontal",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          }
        },
        "targets": [
          {
            "expr": "sum(rate(saas_idp_waf_blocks_total[5m]))",
            "legendFormat": "WAF Blocks/sec",
            "refId": "A"
          }
        ]
      },
      {
        "id": 8,
        "title": "Privilege Escalations",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 5},
        "fieldConfig": {
          "defaults": {
            "mappings": [],
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1},
