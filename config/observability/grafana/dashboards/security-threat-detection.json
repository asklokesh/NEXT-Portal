        },
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "justifyMode": "center",
          "orientation": "horizontal",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          }
        },
        "targets": [
          {
            "expr": "sum(increase(saas_idp_privilege_escalation_attempts_total[1h]))",
            "legendFormat": "Privilege Escalations",
            "refId": "A"
          }
        ]
      },
      {
        "id": 9,
        "title": "Authentication & Access Control",
        "type": "row",
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 9},
        "collapsed": false
      },
