{
  "dashboard": {
    "id": null,
    "title": "SaaS IDP - Security & Threat Detection",
    "tags": ["saas-idp", "security", "threats", "authentication"],
    "style": "dark",
    "timezone": "browser",
    "editable": true,
    "graphTooltip": 1,
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["30s", "1m", "5m", "15m", "30m", "1h", "2h"],
      "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d"]
    },
    "refresh": "30s",
    "version": 6,
    "panels": [
      {
        "id": 1,
        "title": "Security Status Overview",
        "type": "row",
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 0},
        "collapsed": false
      },
      {
        "id": 2,
        "title": "Security Score",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 1},
        "fieldConfig": {
          "defaults": {
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": null},
                {"color": "orange", "value": 70},
                {"color": "yellow", "value": 85},
                {"color": "green", "value": 95}
              ]
            },
            "unit": "short",
            "min": 0,
            "max": 100,
            "decimals": 1
          }
        },
        "options": {
          "orientation": "auto",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        },
        "targets": [
          {
            "expr": "saas_idp_security_score{component=\"overall\"}",
            "legendFormat": "Security Score",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "title": "Active Threats",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 1},
        "fieldConfig": {
          "defaults": {
            "mappings": [],
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 5}
              ]
            },
            "unit": "short"
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "justifyMode": "center",
          "orientation": "horizontal",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          }
        },
        "targets": [
          {
            "expr": "count(ALERTS{severity=\"critical\", service=\"authentication\", alertstate=\"firing\"})",
            "legendFormat": "Critical Security Alerts",
            "refId": "A"
          }
        ]
      },
      {
        "id": 4,
        "title": "Failed Authentication Attempts (5m)",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 1},
        "fieldConfig": {
          "defaults": {
            "mappings": [],
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 10},
                {"color": "red", "value": 50}
              ]
            },
            "unit": "short"
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "justifyMode": "center",
          "orientation": "horizontal",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          }
        },
        "targets": [
          {
            "expr": "sum(rate(saas_idp_authentication_failures_total[5m])) * 300",
            "legendFormat": "Auth Failures",
            "refId": "A"
          }
        ]
      },
      {
        "id": 5,
        "title": "Blocked IPs (24h)",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 1},
        "fieldConfig": {
          "defaults": {
            "mappings": [],
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 5},
                {"color": "red", "value": 20}
              ]
            },
            "unit": "short"
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "none",
          "justifyMode": "center",
          "orientation": "horizontal",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          }
        },
        "targets": [
          {
            "expr": "sum(increase(saas_idp_security_blocks_total{type=\"ip_address\"}[24h]))",
            "legendFormat": "Blocked IPs",
            "refId": "A"
          }
        ]
      },
      {
        "id": 6,
        "title": "Suspicious Activity Rate",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 5},
        "fieldConfig": {
          "defaults": {
            "mappings": [],
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 0.01},
                {"color": "red", "value": 0.05}
              ]
            },
            "unit": "percentunit",
            "decimals": 4
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "area",
          "justifyMode": "center",
          "orientation": "horizontal",
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          }
        },
        "targets": [
          {
            "expr": "sum(rate(saas_idp_suspicious_activities_total[5m])) / sum(rate(saas_idp_user_activities_total[5m]))",
            "legendFormat": "Suspicious Activity Rate",
            "refId": "A"
          }
        ]
      },
      {
        "id": 7,
        "title": "WAF Blocked Requests",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 5},
        "fieldConfig": {
          "defaults": {
            "mappings": [],
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 100},
                {"color": "red", "value": 500}
