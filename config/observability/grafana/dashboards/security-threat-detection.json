        "targets": [
          {
            "expr": "sum(rate(saas_idp_security_events_total[5m])) by (attack_type)",
            "legendFormat": "{{attack_type}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 15,
        "title": "Security Event Severity",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 19},
