        "options": {
          "legend": {
            "calcs": ["mean", "max"],
            "displayMode": "table",
            "placement": "bottom"
          },
          "tooltip": {
            "mode": "multi",
            "sort": "desc"
          }
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(saas_idp_authentication_duration_seconds_bucket[5m])) by (le, provider))",
            "legendFormat": "{{provider}} p95",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, sum(rate(saas_idp_authentication_duration_seconds_bucket[5m])) by (le, provider))",
            "legendFormat": "{{provider}} p50",
            "refId": "B"
          }
        ]
      },
      {
        "id": 12,
        "title": "Threat Intelligence & Detection",
        "type": "row",
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 18},
        "collapsed": false
      },
      {
        "id": 13,
        "title": "Suspicious IP Addresses",
        "type": "table",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 19},
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "displayMode": "auto",
              "inspect": false
            },
            "mappings": [],
            "thresholds": {
              "steps": [
                {"color": "green", "value": null}
              ]
            }
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "Threat Score"
              },
              "properties": [
                {
                  "id": "custom.displayMode",
                  "value": "color-background"
                },
                {
                  "id": "thresholds",
                  "value": {
                    "steps": [
                      {"color": "green", "value": null},
                      {"color": "yellow", "value": 50},
                      {"color": "red", "value": 80}
                    ]
                  }
                }
              ]
