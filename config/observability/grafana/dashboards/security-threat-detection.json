        "targets": [
          {
            "expr": "topk(10, saas_idp_threat_intelligence_score{type=\"ip_address\"})",
            "format": "table",
            "instant": true,
            "legendFormat": "",
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "__name__": true,
                "job": true,
                "instance": true,
                "type": true
              },
              "indexByName": {},
              "renameByName": {
                "Value": "Threat Score",
                "ip_address": "IP Address",
                "country": "Country",
                "reason": "Threat Type"
              }
            }
          }
        ]
      },
      {
        "id": 14,
        "title": "Attack Patterns",
