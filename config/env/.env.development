# Application Configuration
NODE_ENV=development
PORT=4400
MAIN_APP_PORT=4400
NEXT_PUBLIC_APP_URL=http://localhost:4400

# Database Configuration
DATABASE_URL="postgresql://backstage_user:backstage_password@localhost:5432/backstage_idp?schema=public"
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=backstage_idp
DATABASE_USER=backstage_user
DATABASE_PASSWORD=backstage_password
DATABASE_SSL=false

# Redis Configuration
REDIS_URL="redis://localhost:6379"
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_SESSION_DB=1

# Backstage Configuration
BACKSTAGE_FRONTEND_URL=http://localhost:4401
BACKSTAGE_BACKEND_URL=http://localhost:4402
BACKSTAGE_FRONTEND_PORT=4401
BACKSTAGE_BACKEND_PORT=4402
BACKSTAGE_API_TOKEN=your_backstage_token_here

# Authentication Configuration
JWT_SECRET=development-jwt-secret-key-32-chars-minimum-required-here
JWT_EXPIRES_IN=7d
SESSION_SECRET=development-session-secret-32-chars-minimum-required
SESSION_MAX_AGE=604800000

# OAuth Providers
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Cloud Provider APIs for Cost Tracking
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_COST_EXPLORER_ENABLED=true

AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret
AZURE_TENANT_ID=your_azure_tenant_id
AZURE_SUBSCRIPTION_ID=your_azure_subscription_id
AZURE_COST_MANAGEMENT_ENABLED=true

GCP_PROJECT_ID=your_gcp_project_id
GCP_CLIENT_EMAIL=your_service_account_email
GCP_PRIVATE_KEY=your_service_account_private_key
GCP_BILLING_ACCOUNT_ID=your_billing_account_id
GCP_CLOUD_BILLING_ENABLED=true

# Feature Flags
ENABLE_COST_TRACKING=true
ENABLE_HEALTH_MONITORING=true
ENABLE_TEMPLATE_SYSTEM=true
ENABLE_NOTIFICATIONS=true
ENABLE_AUDIT_LOGGING=true
DEBUG_MODE=true