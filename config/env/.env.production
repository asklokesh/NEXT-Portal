# Production Environment Configuration
# Copy this file and update with your production values

# Application
NODE_ENV=production
NEXT_PUBLIC_APP_NAME="Backstage IDP Platform"
NEXT_PUBLIC_APP_URL=https://backstage-idp.example.com
NEXT_PUBLIC_ENVIRONMENT=production

# Database (set via environment or secrets)
# DATABASE_URL="postgresql://backstage_user:CHANGE_ME@postgres.example.com:5432/backstage_idp?schema=public&sslmode=require"
# DATABASE_POOL_SIZE=20

# Redis (set via environment or secrets)
# REDIS_HOST=redis.example.com
# REDIS_PORT=6379
# REDIS_PASSWORD=CHANGE_ME
# REDIS_TLS=true

# Backstage Integration
BACKSTAGE_API_URL=https://backstage.example.com
NEXT_PUBLIC_BACKSTAGE_API_URL=https://backstage.example.com
# BACKSTAGE_AUTH_TOKEN=CHANGE_ME

# Authentication (set via environment or secrets)
# SESSION_SECRET=CHANGE_ME_TO_RANDOM_64_CHAR_STRING
# ENCRYPTION_KEY=CHANGE_ME_TO_32_CHAR_STRING
# JWT_SECRET=CHANGE_ME_TO_RANDOM_STRING
# NEXTAUTH_SECRET=CHANGE_ME
# NEXTAUTH_URL=https://backstage-idp.example.com

# OAuth Providers (set via environment or secrets)
# GITHUB_CLIENT_ID=CHANGE_ME
# GITHUB_CLIENT_SECRET=CHANGE_ME
# GOOGLE_CLIENT_ID=CHANGE_ME
# GOOGLE_CLIENT_SECRET=CHANGE_ME

# Monitoring (set via environment or secrets)
# SENTRY_DSN=https://CHANGE_ME@sentry.io/PROJECT_ID
# SENTRY_ENVIRONMENT=production
# SENTRY_RELEASE=${GIT_SHA}
# METRICS_AUTH_TOKEN=CHANGE_ME

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Performance
ENABLE_CACHE=true
CACHE_TTL=300
API_RATE_LIMIT=100
API_RATE_WINDOW=60000

# Security
ALLOWED_ORIGINS=https://backstage-idp.example.com,https://backstage.example.com
CSP_REPORT_URI=https://csp-report.example.com
HSTS_MAX_AGE=63072000

# Feature Flags
NEXT_PUBLIC_ENABLE_NO_CODE=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_WEBSOCKETS=true
ENABLE_COST_TRACKING=true
ENABLE_MONITORING=true
ENABLE_NOTIFICATIONS=true

# External Services (set via environment or secrets)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=notifications@example.com
# SMTP_PASSWORD=CHANGE_ME
# SMTP_FROM="Backstage IDP <notifications@example.com>"

