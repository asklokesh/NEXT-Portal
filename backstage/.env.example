# GitHub OAuth Configuration
# Get these from your GitHub OAuth App settings:
# https://github.com/settings/developers
AUTH_GITHUB_CLIENT_ID=your_github_client_id_here
AUTH_GITHUB_CLIENT_SECRET=your_github_client_secret_here

# GitHub Integration Token (Personal Access Token)
# Create at: https://github.com/settings/tokens
# Required scopes: repo, workflow, user:email, read:org
GITHUB_TOKEN=your_github_token_here

# Database Configuration (for production)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=backstage_dev

# SMTP Configuration (optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Backend URL (should match your deployment URL)
BACKEND_URL=http://localhost:7007

# Application URL (should match your frontend URL)
APP_URL=http://localhost:3000