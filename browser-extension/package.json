{
  "name": "@backstage-idp/browser-extension",
  "version": "1.0.0",
  "description": "Browser extension for Backstage Developer Portal integration",
  "main": "src/background.ts",
  "scripts": {
    "build": "webpack --mode=production",
    "build:dev": "webpack --mode=development",
    "watch": "webpack --mode=development --watch",
    "clean": "rimraf dist",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "test": "jest",
    "package": "npm run build && web-ext build --source-dir=dist",
    "package:chrome": "npm run build && cd dist && zip -r ../backstage-extension-chrome.zip .",
    "package:firefox": "npm run build && web-ext build --source-dir=dist --artifacts-dir=.",
    "dev:chrome": "npm run build:dev && web-ext run --target=chromium --source-dir=dist",
    "dev:firefox": "npm run build:dev && web-ext run --target=firefox-desktop --source-dir=dist"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "backstage",
    "developer-portal",
    "browser-extension",
    "chrome-extension",
    "firefox-addon"
  ],
  "author": "Backstage Team",
  "license": "Apache-2.0",
  "dependencies": {
    "@backstage-idp/sdk-typescript": "^1.0.0",
    "webextension-polyfill": "^0.10.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.251",
    "@types/node": "^20.10.6",
    "@types/webextension-polyfill": "^0.10.7",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "eslint": "^8.56.0",
    "html-webpack-plugin": "^5.6.0",
    "jest": "^29.7.0",
    "mini-css-extract-plugin": "^2.7.6",
    "rimraf": "^5.0.5",
    "style-loader": "^3.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "web-ext": "^7.8.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/backstage/backstage-idp-sdk.git",
    "directory": "browser-extension"
  }
}